<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.LibraryFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/libraryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="---Your Library---"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/libraryTextView"
            android:id="@+id/thanhNgang"
            android:background="@color/underline"
            tools:ignore="NotSibling" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thanhNgang"
            android:id="@+id/playlistLinear"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"

            android:padding="4dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_playlist_play_24"
                />

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Playlists"
                android:id="@+id/PlaylistTV"
                android:textColor="#170606"
                android:textSize="25dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_navigate_next_24"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlistLinear"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="4dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_favorite_24"
                />

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Liked Song"
                android:textColor="#170606"
                android:textSize="25dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_navigate_next_24"
                />



        </LinearLayout>
    </RelativeLayout>

</FrameLayout>