<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272424"

    tools:context=".MainPackage.MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Music Player"
            android:textAlignment="center"
            android:textColor="#C6B8B8"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/SearchBtn"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_search_24" />

        <ImageView
            android:id="@+id/UserBtn"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_face_24" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_below="@+id/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PlayMusic"
        android:orientation="vertical"
        android:layout_below="@+id/viewPage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To play Music"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To play Music"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayMusic"
        android:layout_alignParentBottom="true"
        android:background="#272424"
        app:tabIndicatorColor="#733097"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="40dp"
        app:tabTextColor="@color/white" />



</RelativeLayout>